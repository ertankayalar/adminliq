

{% include "partials/header.liquid" %}
<div class="container">
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>

    <div class="row">
        {% for stat in stats %}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{ stat.label }}</h5>
                    <p class="card-text">{{ stat.value }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% include "partials/footer.liquid" %}
